@page
@model CarRental.Web.Pages.Reservations.EditModel
@inject PagesLocalizationService PagesLocalizer

<h4>@PagesLocalizer.GetLocalizedHtmlString("CONFIRM_RESERVATION")</h4>
<hr />
<div class="container">
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.User)
            </b>
        </label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Reservation.User)
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.PickUpTime)
            </b>
        </label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Reservation.PickUpTime)
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.DropOffTime)
            </b>
        </label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Reservation.DropOffTime)
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.Address)
            </b>
        </label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Reservation.Address)
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.Price)
            </b>
        </label>
        <div class="col-md-9">
            @Model.Reservation.Price Ft
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.State)
            </b>
        </label>
        <div class="col-md-9">
            @if (Model.Reservation.State == Reservation.ReservationStates.Accepted)
            {
                @PagesLocalizer.GetLocalizedHtmlString("ACCEPTED")
            }
            else
            {
                @if (Model.Reservation.State == Reservation.ReservationStates.Cancled)
                {
                    @PagesLocalizer.GetLocalizedHtmlString("CANCELED")
                }
                else
                {
                    @PagesLocalizer.GetLocalizedHtmlString("UNDECIEDED")
                }
            }
        </div>
    </div>
    <div class="row">
        <label class="col-md-3">
            <b>
                @Html.DisplayNameFor(model => model.Reservation.VehicleModelId)
            </b>
        </label>
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Reservation.VehicleType)
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <form method="post" class="mt-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Reservation.Id">
                <div class="form-group">
                    <label asp-for="Reservation.CarId" class="control-label"></label>
                    <select asp-for="Reservation.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                    <span asp-validation-for="Reservation.CarId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Accept Reservation" class="btn btn-success">@PagesLocalizer.GetLocalizedHtmlString("ACCEPT_RESERVATION")</button>
                    <button type="submit" value="Cancel Reservation" class="btn btn-danger" asp-page-handler="Cancel">@PagesLocalizer.GetLocalizedHtmlString("CANCEL_RESERVATION")</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">@PagesLocalizer.GetLocalizedHtmlString("BACK_LIST")</a>
    </div>
</div>