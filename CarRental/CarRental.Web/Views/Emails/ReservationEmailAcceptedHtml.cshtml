        <td bgcolor="#ffffff" align="left" style="padding: 10px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 20px;">
            @Html.DisplayFor(model => model.DropOffTime)
        </td>
    </tr>
    <tr>
        <td bgcolor="#ffffff" align="left" style="padding: 10px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 20px;">
            <b>@Html.DisplayNameFor(model => model.Price)</b>
        </td>
        <td bgcolor="#ffffff" align="left" style="padding: 10px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 20px;">
            @Html.DisplayFor(model => model.Price) Ft
        </td>
    </tr>
    <tr>
        <td bgcolor="#ffffff" align="left" style="padding: 10px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 20px;">
            <b>@Html.DisplayNameFor(model => model.State)</b>
        </td>
        <td bgcolor="#ffffff" align="left" style="padding: 10px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 20px;">
            <p>
                @if (Model.State == Reservation.ReservationStates.Accepted)
                {
                    @PagesLocalizer.GetLocalizedHtmlString("ACCEPTED")
                }
                else
                {
                    @if (Model.State == Reservation.ReservationStates.Cancled)
                    {
                        @PagesLocalizer.GetLocalizedHtmlString("CANCELED")
                    }
                    else
                    {
                        @PagesLocalizer.GetLocalizedHtmlString("UNDECIEDED")
                    }
                }
            </p>
        </td>
    </tr>
