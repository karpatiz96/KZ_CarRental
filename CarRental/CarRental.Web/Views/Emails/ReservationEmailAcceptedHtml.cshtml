@using CarRental.Bll.Dtos
@using CarRental.Dal.Entities
@model EmailReservationDto

@inject IdentityLocalizationService IdentityLocalizer
@inject PagesLocalizationService PagesLocalizer

@{
    Layout = "_EmailLayoutHtml";
    ViewContext.ViewData["Title"] = IdentityLocalizer.GetLocalizedHtmlString("RESERVATION_TITLE");
}

<p>@IdentityLocalizer.GetLocalizedHtmlString("EMAIL_RESERVATION_DEAR") @Model.UserName!</p>

<br />

<p>@IdentityLocalizer.GetLocalizedHtmlString("EMAIL_RESERVATION_ACCEPTED_TEXT")</p>

